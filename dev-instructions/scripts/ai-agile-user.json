    "doNotCommit": true
  },
  "secrets": {
    "jira": {
      "site": "https://yourcompany.atlassian.net",
      "email": "user@yourcompany.com",
      "token": "JIRA_API_TOKEN_HERE"
    },
    "confluence": {
      "sites": [
        {
          "baseUrl": "https://yourcompany.atlassian.net",
          "email": "user@yourcompany.com",
          "token": "CONFLUENCE_API_TOKEN_HERE"
        }
      ]
    },
    "figma": {
      "token": "FIGMA_PERSONAL_ACCESS_TOKEN_HERE"
    }
  }
}
